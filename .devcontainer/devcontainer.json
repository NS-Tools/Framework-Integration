{
	"name": "Node.js & TypeScript",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"features": {
		"ghcr.io/devcontainers/features/git:1": {
            "version": "latest",
            "ppa": "false"
        },
		"ghcr.io/devcontainers/features/java:1": { "version": 17 }
	},
	"mounts": [
		"source=profile,target=/home/node,type=volume"
	],
	"runArgs": [
		"--tmpfs=${containerWorkspaceFolder}/node_modules:exec"
	],
	"remoteEnv": {
		"WORKSPACE_PATH": "${containerWorkspaceFolder}"
	},
	"postStartCommand": "cd ${containerWorkspaceFolder} && .devcontainer/postStartCommand.sh",

	// Configure tool-specific properties.
	"customizations": {
		// Configure properties specific to VS Code.
		"vscode": {
			// Add the IDs of extensions you want installed when the container is created.
			"extensions": [
				"github.copilot",
				"github.copilot-chat",
				"oracle.suitecloud-vscode-extension",
				"biomejs.biome"
			]
		}
	},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "yarn install",

	// Set `remoteUser` to `root` to connect as root instead. More info: https://aka.ms/vscode-remote/containers/non-root.
	"remoteUser": "node"
}
